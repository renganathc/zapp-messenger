<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:civ_border_color="#FF039BE5"
        app:civ_border_width="7dp"
        app:layout_constraintEnd_toEndOf="@+id/image_button"
        app:layout_constraintHorizontal_bias="@+id/image_button"
        app:layout_constraintStart_toStartOf="@+id/image_button"
        app:layout_constraintTop_toTopOf="@+id/image_button" />

    <EditText
        android:id="@+id/email_id"
        android:layout_width="510dp"
        android:layout_height="75dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="95dp"
        android:background="@drawable/text_new"
        android:backgroundTint="#E6E4E4"
        android:ems="10"
        android:hint="Email"
        android:paddingStart="25dp"
        android:inputType="textPersonName"
        android:padding="9dp"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/username"
        android:layout_width="510dp"
        android:layout_height="75dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="95dp"
        android:background="@drawable/text_new"
        android:backgroundTint="#E6E4E4"
        android:ems="10"
        android:hint="Username (Display Name)"
        android:inputType="textPersonName"
        android:padding="9dp"
        android:paddingStart="25dp"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263" />

    <EditText
        android:id="@+id/pw"
        android:layout_width="510dp"
        android:layout_height="75dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="95dp"
        android:background="@drawable/text_new"
        android:backgroundTint="#E6E4E4"
        android:ems="10"
        android:hint="Password"
        android:paddingStart="25dp"
        android:inputType="textPassword"
        android:padding="9dp"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.536" />

    <EditText
        android:id="@+id/cpw"
        android:layout_width="510dp"
        android:layout_height="75dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="95dp"
        android:background="@drawable/text_new"
        android:backgroundTint="#E6E4E4"
        android:ems="10"
        android:hint="Confirm Password"
        android:paddingStart="25dp"
        android:inputType="textPassword"
        android:padding="9dp"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.668" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="161dp"
        android:background="@drawable/text_new"
        android:backgroundTint="@color/colorAccent"
        android:text="Register"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774" />

    <Button
        android:id="@+id/image_button"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginBottom="103dp"
        android:background="@drawable/image_button"
        android:text="Profile             Image"
        android:textColor="#64B5F6"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <TextView
        android:id="@+id/back_to_login"
        android:layout_width="334dp"
        android:layout_height="41dp"
        android:gravity="center"
        android:text="Go back to Login Page"
        android:textColor="#2B56FD"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />

</androidx.constraintlayout.widget.ConstraintLayout>